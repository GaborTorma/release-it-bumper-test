{
  "plugins": {
    "@release-it-plugins/workspaces": {
      "publish": false,
      "skipChecks": true,
      "workspaces": [
        "apps/*",
        "packages/*",
        "releases/*"
      ]
    }
  },
  "git": {
    "requireCleanWorkingDir": false,
    "commitMessage": "Release: Mono ${version}",
    "tagAnnotation": "Release: Mono ${version}",
    "tagName": "mono-v${version}"
  },
  "github": {
    "release": false
  },
  "npm": {
    "publish": false
  }
}
